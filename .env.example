# Server Environment Variables
VITE_SERVER_PORT=5000
VITE_MONGODB_URI=mongodb://localhost:27017/hrpbloom
VITE_JWTSECRET=your_jwt_secret_key
VITE_JWT_EXPIRES_IN=7d

# Client URL for CORS and redirects
VITE_CLIENT_URL=http://localhost:3000

# API URL
VITE_API_URL=http://localhost:5000/api

# Feature Flags
VITE_FEATURE_AI_ASSISTANT=true
VITE_FEATURE_QR_ATTENDANCE=true
VITE_FEATURE_AI_LEAVE_MANAGEMENT=true
VITE_FEATURE_ANALYTICS=true
VITE_MALAYSIAN_HR_ASSISTANT_ENABLED=true

# Email Configuration
VITE_EMAIL_FROM=your_email@example.com

# File Storage
VITE_UPLOAD_DIR=uploads
VITE_MAX_FILE_SIZE=5242880